@model IEnumerable<PontosTuristicosModel>;


<div class="custom-container">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center py-2 mb-4">
            <h1>Pontos Turísticos</h1>
            <a asp-controller="ListaPontosTuristicos" asp-action="cadastrar"
                class="btn custom-btn-new fw-bold text-light px-5">Novo</a>
        </div>

        @if (Model != null)
        {
            <div class="custom-grid-container">
                @foreach (var pontoTuristico in Model)
                {
                    <div class="custom-card">
                        <div class="card-body">
                            <h4 class="card-title">@pontoTuristico.Nome</h4>
                            <h6>@pontoTuristico.Cidade - @pontoTuristico.Estado</h6>
                            <p class="card-text">@pontoTuristico.Descricao</p>
                            <a href="#" class="btn btn-primary">Saiba mais</a>
                        </div>
                    </div>
                }
            </div>
        }

    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (ViewBag.PaginaAtual > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@(ViewBag.PaginaAtual - 1)"
                        aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.PaginaAtual ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                </li>
            }

            @if (ViewBag.PaginaAtual < ViewBag.TotalPaginas)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@(ViewBag.PaginaAtual + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>




