<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Teste Web - SINQIA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TesteWebSINQIA.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="">
        <nav class="navbar navbar-expand-sm navbar-light bg-white custom-border-nav box-shadow py-3 mb-5 custom-navbar">
            <div class="container-fluid w-75 d-flex justify-content-between">
                <a class="navbar-brand custom-logo w-25 flex-grow-0" asp-area="" asp-controller="Home"
                    asp-action="Index">TesteWebSINQIA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav custom-navbar-ul d-flex w-50 justify-content-end gap-4">
                        <li class="nav-item text-center">
                            <a class="nav-link custom-link-navbar text-dark" asp-area="" asp-controller="Home"
                                asp-action="Index">Home</a>
                        </li>
                            <li class="nav-item text-center">
                            <a class="nav-link custom-link-navbar text-dark" asp-area="" asp-controller="ListaPontosTuristicos"
                                asp-action="cadastrar">Cadastro</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid w-75"> @*Largura do body foi modificada para ocupar 75% da tela*@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="custom-footer footer text-muted">
        <div class="container custom-footer-div py-2 d-flex justify-content-center ">
            &copy; 2025 - Teste Web &nbsp;<p  style="color: #fb4400; font-size: 1.1rem;">SINQIA</p> &nbsp;/ Nei Junio
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
